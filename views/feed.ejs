<%- include('partials/header.ejs') %>

<div class="min-h-screen bg-zinc-900 text-white p-10">
  <h1 class="text-4xl font-bold mb-8 text-center">Explore Pins</h1>

  <% if (posts.length === 0) { %>
    <p class="text-center text-zinc-400 text-lg">No pins available.</p>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% posts.forEach(post => { %>
        <a href="/post/<%= post._id %>">
          <div class="rounded-2xl overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300 group">
            <img src="/images/uploads/<%= post.image %>" alt="Pin Image" class="w-full h-52 object-cover group-hover:opacity-90 transition duration-300">
            <div class="mt-2 px-1">
              <p class="text-sm text-zinc-300"><%= post.title %></p>
              <p class="text-xs text-zinc-500"><%= post.description %></p>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer.ejs') %>
